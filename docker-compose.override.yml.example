# docker-compose.override.yml.example
#
# For macOS/Windows users: Copy this file to docker-compose.override.yml to enable bridge networking
# Host networking (default) doesn't work on macOS/Windows Docker Desktop
#
# cp docker-compose.override.yml.example docker-compose.override.yml
#
services:
  gpsd-exporter:
    network_mode: bridge
    ports:
      - "${EXPORTER_PORT:-9015}:9015"
    extra_hosts:
      - "host.docker.internal:host-gateway"
    environment:
      - GPSD_HOST=host.docker.internal  # Override to use Docker Desktop's host gateway
